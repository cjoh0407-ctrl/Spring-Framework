<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.TodoMapper">

	<insert id="insertTodo">
		INSERT INTO 
			simple_todo (title, description)
		VALUES
			(#{title}, #{description})
	</insert>
	
	<select id="selectTodoList" resultType="org.zerock.dto.TodoDTO">
		SELECT * FROM
			simple_todo
		ORDER BY
			id DESC
	</select>
	
	<select id="selectOneById" resultType="org.zerock.dto.TodoDTO">
		SELECT
			id, title, description
		FROM
			simple_todo
		WHERE
			id = #{id}
	</select>
	
	<update id="updateTodo">
		UPDATE
			simple_todo
		SET
			title = #{title}, description = #{description}
		WHERE
			id = #{id}
	</update>
	
	<delete id="deleteTodo">
		DELETE FROM
			simple_todo
		WHERE
			id = #{id}
	</delete>
	
	
</mapper>
